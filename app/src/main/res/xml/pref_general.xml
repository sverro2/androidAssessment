<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_id"
        android:summary="@string/pref_description_id"
        android:title="@string/pref_title_id" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_height"
        android:summary="@string/pref_description_height"
        android:title="@string/pref_title_height" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_base_xp"
        android:summary="@string/pref_description_base_xp"
        android:title="@string/pref_title_base_xp" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="Friend"
        android:entries="@array/pref_friends_list"
        android:entryValues="@array/pref_friends_list"
        android:key="friends_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_friends" />

</PreferenceScreen>
